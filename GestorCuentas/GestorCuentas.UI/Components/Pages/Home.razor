@page "/"
@page "/login"
@rendermode InteractiveServer
@attribute [AllowAnonymous]
@using GestorCuentas.UI.Models
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<PageTitle>Iniciar sesión</PageTitle>

<div class="container-fluid login-page d-flex align-items-center justify-content-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-5 col-md-5 col-lg-6 col-xl-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-12 bg-white">
                        <div class="p-4 p-lg-5">
                            <div class="text-center mb-4">
                                <div class="avatar-circle mx-auto mb-3">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                                <h3 class="fw-semibold mb-1">Bienvenidos</h3>
                                <p class="text-muted mb-0">Inicia sesión para continuar</p>
                            </div>

                            <EditForm Model="_model" OnValidSubmit="OnSubmitAsync" FormName="login-form" class="needs-validation" novalidate>
                                <DataAnnotationsValidator />
                                <ValidationSummary />

                                <div class="mb-3">
                                    <label for="idUsuario" class="form-label">IdUsuario</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                        <InputText id="idUsuario" class="form-control" @bind-Value="_model.IdUsuario" autocomplete="username" />
                                    </div>
                                    <ValidationMessage For="() => _model.IdUsuario" />
                                </div>

                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <label for="clave" class="form-label mb-0">Clave</label>
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <InputText id="clave" type="password" class="form-control" @bind-Value="_model.Clave" autocomplete="current-password" />
                                    </div>
                                    <ValidationMessage For="() => _model.Clave" />
                                </div>

                                <div class="d-grid gap-3">
                                    <button type="submit" class="btn btn-primary btn-lg shadow-sm" disabled="@_isSubmitting">
                                        @_submitLabel
                                    </button>
                                </div>
                            </EditForm>

                            @if (_statusMessage is not null)
                            {
                                <div class="alert @( _loginExitoso ? "alert-success" : "alert-danger") mt-4" role="alert">
                                    @_statusMessage
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private readonly LoginModel _model = new();
    private bool _isSubmitting;
    private bool _loginExitoso;
    private string? _statusMessage;

    private string _submitLabel => _isSubmitting ? "Validando..." : "Iniciar sesión";

    private async Task OnSubmitAsync()
    {
        _isSubmitting = true;
        _statusMessage = null;
        _loginExitoso = false;

        try
        {
            var loginUri = NavigationManager.ToAbsoluteUri("/api/login");
            var response = await HttpClient.PostAsJsonAsync(loginUri, _model);

            if (response.IsSuccessStatusCode)
            {
                _loginExitoso = true;
                _statusMessage = "Inicio de sesión exitoso.";
                NavigationManager.NavigateTo("/dashboard", forceLoad: true);
                return;
            }

            _statusMessage = response.StatusCode == System.Net.HttpStatusCode.Unauthorized
                ? "IdUsuario o clave incorrectos."
                : $"No se pudo iniciar sesión. Código: {(int)response.StatusCode}";
        }
        catch (Exception ex)
        {
            _statusMessage = $"Ocurrió un error al iniciar sesión: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
