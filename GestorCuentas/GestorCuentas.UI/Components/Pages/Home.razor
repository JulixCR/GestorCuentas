@page "/"
@rendermode InteractiveServer
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using System.Security.Claims
@using GestorCuentas.UI.Models
@inject ILoginService LoginService
@inject NavigationManager NavigationManager
@inject IHttpContextAccessor HttpContextAccessor

<PageTitle>Iniciar sesión</PageTitle>

<div class="container-fluid login-page d-flex align-items-center justify-content-center min-vh-100">
    <div class="row w-100 justify-content-center">
        <div class="col-5 col-md-5 col-lg-6 col-xl-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-12 bg-white">
                        <div class="p-4 p-lg-5">
                            <div class="text-center mb-4">
                                <div class="avatar-circle mx-auto mb-3">
                                    <i class="bi bi-shield-lock"></i>
                                </div>
                                <h3 class="fw-semibold mb-1">Bienvenidos</h3>
                                <p class="text-muted mb-0">Inicia sesión para continuar</p>
                            </div>

                            <EditForm Model="_model" OnValidSubmit="OnSubmitAsync" FormName="login-form" class="needs-validation" novalidate>
                                <DataAnnotationsValidator />
                                <ValidationSummary />

                                <div class="mb-3">
                                    <label for="idUsuario" class="form-label">IdUsuario</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                        <InputText id="idUsuario" class="form-control" @bind-Value="_model.IdUsuario" autocomplete="username" />
                                    </div>
                                    <ValidationMessage For="() => _model.IdUsuario" />
                                </div>

                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <label for="clave" class="form-label mb-0">Clave</label>
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                        <InputText id="clave" type="password" class="form-control" @bind-Value="_model.Clave" autocomplete="current-password" />
                                    </div>
                                    <ValidationMessage For="() => _model.Clave" />
                                </div>

                                <div class="d-grid gap-3">
                                    <button type="button" class="btn btn-primary btn-lg shadow-sm"
                                            disabled="@_isSubmitting"
                                            @onclick="OnSubmitAsync">
                                        @_submitLabel
                                    </button>
                                </div>
                            </EditForm>

                            @if (_statusMessage is not null)
                            {
                                <div class="alert @( _loginExitoso ? "alert-success" : "alert-danger") mt-4" role="alert">
                                    @_statusMessage
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private readonly LoginModel _model = new();
    private bool _isSubmitting;
    private bool _loginExitoso;
    private string? _statusMessage;

    private string _submitLabel => _isSubmitting ? "Validando..." : "Iniciar sesión";

    private async Task OnSubmitAsync()
    {
        _isSubmitting = true;
        _statusMessage = null;
        _loginExitoso = false;

        try
        {
            _loginExitoso = await LoginService.ValidateCredentialsAsync(_model.IdUsuario!, _model.Clave!);
            _statusMessage = _loginExitoso
                ? "Inicio de sesión exitoso."
                : "IdUsuario o clave incorrectos.";
        }
        catch (Exception ex)
        {
            _loginExitoso = false;
            _statusMessage = $"Ocurrió un error al validar las credenciales: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }

        var httpContext = HttpContextAccessor.HttpContext;

        if (httpContext is null)
        {
            _statusMessage = "No se pudo acceder al contexto de autenticación.";
            return;
        }

        if (_loginExitoso)
        {
            var claims = new List<Claim>
            {
                new(ClaimTypes.Name, _model.IdUsuario!)
            };

            var claimsIdentity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
            var authProperties = new AuthenticationProperties
            {
                IsPersistent = true
            };

            await httpContext.SignInAsync(
                CookieAuthenticationDefaults.AuthenticationScheme,
                new ClaimsPrincipal(claimsIdentity),
                authProperties);

            NavigationManager.NavigateTo("/dashboard", forceLoad: true);
            return;
        }

        await httpContext.SignOutAsync(CookieAuthenticationDefaults.AuthenticationScheme);
    }
}
