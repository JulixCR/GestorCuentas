@page "/"

<PageTitle>Iniciar sesión</PageTitle>

<section class="login-hero">
    <div class="login-ambient"></div>
    <div class="login-grid">
        <div class="login-intro">
            <p class="chip">GestorCuentas</p>
            <h1>Bienvenido de vuelta</h1>
            <p class="subtitle">Administra tus cuentas y finanzas con una experiencia limpia y enfocada.</p>
            <ul class="feature-list">
                <li>Seguimiento rápido de movimientos.</li>
                <li>Visualizaciones modernas y claras.</li>
                <li>Seguridad reforzada con verificación en dos pasos.</li>
            </ul>
        </div>
        <div class="login-card">
            <div class="card-header">
                <div>
                    <p class="chip subtle">Iniciar sesión</p>
                    <h2>Continúa con tu cuenta</h2>
                </div>
                <span class="accent-dot" aria-hidden="true"></span>
            </div>
            <form class="login-form">
                <label for="email">Correo electrónico</label>
                <div class="input-wrapper">
                    <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <path d="M4 6.5A2.5 2.5 0 0 1 6.5 4h11A2.5 2.5 0 0 1 20 6.5v11A2.5 2.5 0 0 1 17.5 20h-11A2.5 2.5 0 0 1 4 17.5z" />
                        <path d="m5 7 7 5 7-5" />
                    </svg>
                    <input id="email" type="email" placeholder="tucorreo@ejemplo.com" autocomplete="email" required>
                </div>

                <label for="password">Contraseña</label>
                <div class="input-wrapper">
                    <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <rect x="4" y="10" width="16" height="11" rx="2" ry="2" />
                        <path d="M8 10V7a4 4 0 0 1 8 0v3" />
                    </svg>
                    <input id="password" type="password" placeholder="••••••••" autocomplete="current-password" required>
                </div>

                <div class="form-actions">
                    <label class="remember">
                        <input type="checkbox" id="remember">
                        Recordarme
                    </label>
                    <a class="link" href="#">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="primary">Acceder</button>
                <button type="button" class="secondary">Ingresar con código QR</button>
            </form>

            <p class="card-footer">¿Nuevo en la plataforma? <a class="link" href="#">Crear cuenta</a></p>
        </div>
    </div>
</section>
